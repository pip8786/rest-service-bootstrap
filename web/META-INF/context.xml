<?xml version="1.0" encoding="UTF-8"?>

<Context antiJARLocking="true" path="/">
	<Resource
			name="jdbc/RestBootstrap"
			auth="Container"
			type="javax.sql.DataSource"
			username="restbootstrap"
			password="bootsies"
			driverClassName="com.mysql.jdbc.Driver"
			url="jdbc:mysql://localhost:3306/restbootstrap"
            initialSize="0"
            maxActive="20"
            maxIdle="10"
            minIdle="0"
            maxWait="-1"
            validationQuery="SELECT 1"
            testOnBorrow="true"
            factory="org.apache.tomcat.jdbc.pool.DataSourceFactory"/>

</Context>